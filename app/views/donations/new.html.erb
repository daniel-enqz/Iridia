<%= simple_form_for @donation do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description, placeholder:"The better the description, the more artists will come..." %>
    </div>
    <div class="form-actions">
      <%= link_to "Not really", :back, class:"btn btn-outline-warning" %>
      <%= f.button :submit, class:"btn btn-outline-primary" %>
    </div>
<% end %>
