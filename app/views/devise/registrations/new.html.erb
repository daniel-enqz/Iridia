<div class="flex justify-center">
  <div class="sign-in-card box-shadow">
    <div class="auth-card-layout">
      <div class="auth-card-welcome">
        <h2 class="text-2xl font-black">Welcome! Letâ€™s get you started.</h2>
      </div>
      <div class="auth-card-detail">
        <p>Already have an account?  <%= link_to "Sign in", new_user_session_path, class: "text-primary font-bold" %></p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="auth-card-input-fields">
          <div class="email-field">
            <%= f.label :email, class: "input-label", value: "Email address" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "large-field" %>
          </div>
          <div class="password-field mt-4">
            <%= f.label :password, class: "input-label" %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "large-field" %>
          </div>
          <div class="password-field mt-4">
            <%= f.label :password_confirmation, class: "input-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "large-field" %>
          </div>
        </div>
        <div class="button-field">
          <div class="actions">
            <%= f.submit "Sign up", class: "button button-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
