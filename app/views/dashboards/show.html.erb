<p class="font-extrabold text-5xl mt-5 ml-5">My Dashboard</p>

<div class="flex flex-row mt-5">
  <div class="flex flex-col">
    <% if @dashboard.donations.count == 0 %>
      <p class="font-bold text-xl ml-5 mb-3">Make your first donation</p>
      <%= link_to 'Donate', new_donation_path, class: "ml-5 text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
    <% else %>
      <% @dashboard.donations.each do |donation| %>
          <%= render 'dashboards/donated_card', donation: donation %>
      <% end %>
    <% end %>
  </div>

  <div class="flex flex-col">
    <% if @dashboard.claimed.count == 0%>
      <p class="font-bold text-xl ml-5 mb-3">There are many donations you can claim</p>
      <%= link_to 'All Donations', donations_path, class: "ml-5 text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center"%>
    <% else %>
      <% @dashboard.claimed.each do |claimed| %>
          <%= render 'dashboards/claimed_card', claimed: claimed %>
      <% end %>
    <% end %>
  </div>
</div>
